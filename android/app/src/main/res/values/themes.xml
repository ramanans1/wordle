<resources>
    <!-- Launch/splash theme shows the splash drawable as window background -->
    <style name="Theme.Wordle.Launch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Android 12+ splash -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon_placeholder</item>
        <item name="android:windowSplashScreenAnimationDuration">200</item>
        <!-- Pre-Android 12 fallback -->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Runtime app theme -->
    <style name="Theme.Wordle" parent="Theme.Wordle.Launch">
        <!-- Customize your theme here. -->
    </style>
</resources>
